{% extends "auth/base.jinja2" %}
{% from "_form.jinja2" import render_field %}
{% block imports %}
    <script src="{{ url_for('static', filename='js/example.js') }}"></script>
{% endblock %}
{% block head %}
    <h1 class = "base" style = "margin: 0 10px 10px 10px;">{% block title %}Log In{% endblock %}</h1>
{% endblock %}

{% block content %}
    <form method="post">
        <dl>
            {{ render_field(form.username) }}<br>
            {{ render_field(form.password) }}
        </dl>
        <p><input type="submit" class="btn btn-primary" value="Log In"></p>
    </form>
{% endblock %}

